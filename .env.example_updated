# إعدادات خدمة المصادقة - مشروع نائبك

# إعدادات Django الأساسية
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# إعدادات قاعدة البيانات
DB_NAME=naebak_auth
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# إعدادات JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=1
JWT_REFRESH_TOKEN_LIFETIME=7

# إعدادات البريد الإلكتروني
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@naebak.com

# إعدادات SMS
SMS_BACKEND=twilio
SMS_API_KEY=your-twilio-account-sid
SMS_API_SECRET=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# إعدادات التحقق
REQUIRE_EMAIL_VERIFICATION=True
REQUIRE_PHONE_VERIFICATION=True
REQUIRE_ADMIN_APPROVAL=False
AUTO_APPROVE_CITIZENS=True

# إعدادات الأمان
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
USE_RATE_LIMITING=True

# إعدادات Redis (اختيارية)
USE_REDIS=False
REDIS_URL=redis://localhost:6379/1

# إعدادات Celery (اختيارية)
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# إعدادات التخزين السحابي (اختيارية)
USE_CLOUD_STORAGE=False
GS_BUCKET_NAME=naebak-auth
GS_PROJECT_ID=your-gcp-project-id
GS_CREDENTIALS=path/to/credentials.json

# إعدادات المراقبة (اختيارية)
SENTRY_DSN=your-sentry-dsn

# إعدادات الخدمات الأخرى
COMPLAINTS_SERVICE_URL=http://localhost:8002
